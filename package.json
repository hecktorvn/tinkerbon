{
  "name": "tinkerbon",
  "displayName": "Tinker Bon",
  "description": "Run PHP code in Tinker directly from VSCode",
  "version": "0.0.2",
  "publisher": "hecktorvn",
  "engines": {
    "vscode": ">=1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tinkerbon.newFile",
    "onCommand:tinkerbon.runCode"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tinkerbon.newFile",
        "title": "New Tinker File"
      },
      {
        "command": "tinkerbon.runCode",
        "title": "Run Code in Tinker"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test",
    "postinstall": "node ./scripts/install-php-wrapper.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hecktorvn/tinkerbon"
  }
}
